<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptimizationActivity">

   <com.mapbox.mapboxsdk.maps.MapView
       android:background="@color/whitesmoke"
       android:id="@+id/mapView"
       android:layout_width="match_parent"
       android:layout_height="400dp"
       mapbox:mapbox_cameraZoom="11"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <LinearLayout
             android:layout_marginTop="15dp"
             android:paddingHorizontal="15dp"
             android:weightSum="3"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Rute Terpendek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1.4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=":"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:background="@drawable/bg_round"
                android:id="@+id/txt_rute_terpendek"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:layout_weight="0.7"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

         </LinearLayout>

         <LinearLayout
             android:layout_marginTop="15dp"
             android:paddingHorizontal="15dp"
             android:weightSum="3"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Total Jarak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1.4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=":"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:background="@drawable/bg_round"
                android:id="@+id/et_total_jarak"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:layout_weight="0.7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="15dp"
             android:paddingHorizontal="15dp"
             android:weightSum="3"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Running Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1.4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=":"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:background="@drawable/bg_round"
                android:id="@+id/txt_running_time"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:layout_weight="0.7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

         </LinearLayout>
      </LinearLayout>



   </ScrollView>

</LinearLayout>