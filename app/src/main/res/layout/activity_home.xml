<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="10dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txt_judul"
        android:textAlignment="center"
        android:textColor="@color/button_green_focused"
        android:textSize="26sp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:text="APLIKASI WISATA KARO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_judul"
        android:layout_centerHorizontal="true"
        android:text="Maria Nova"
        android:textAlignment="center"
        android:textColor="@color/red_400"
        android:textSize="22sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/txt_nama"
        android:id="@+id/image"
        android:layout_marginTop="20dp"
        android:src="@drawable/logousu"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@id/image"
        android:id="@+id/txt_fak"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="FAKULTAS TEKNOLOGI INFORMASI KOMPUTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_fak"
        android:id="@+id/txt_unit"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="UNIVERSITAS SUMATERA UTARA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_masuk"
        android:clickable="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/blue_natural"
        android:layout_below="@id/txt_unit"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="MASUK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_petunjuk"
        android:clickable="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:layout_below="@id/cv_masuk"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="PETUNJUK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tentang"
        android:clickable="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_below="@id/cv_petunjuk"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="TENTANG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>






</RelativeLayout>